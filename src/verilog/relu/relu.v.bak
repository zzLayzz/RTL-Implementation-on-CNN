module relu #(
    parameter WIDTH = 8
)(
    input clk, reset,
    input valid_in,
    input signed [WIDTH-1:0] data_in,
    output reg valid_out,
    output reg [WIDTH-1:0] data_out
);
    always @(posedge clk) begin
        if (reset) begin valid_out<=0; data_out<=0; end
        else begin
            valid_out <= valid_in;
            data_out  <= (data_in[WIDTH-1]?0:data_in);
        end
    end
endmodule